{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current Jest Test",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "args": ["${file}", "--runInBand"],
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug All Jest Tests",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "args": ["--runInBand"],
      "cwd": "${workspaceRoot}"
    }
  ]
}
